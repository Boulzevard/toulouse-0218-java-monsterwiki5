<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.wcs.monsterlegendswiki.Rockilla">

    <ImageView
        android:id="@+id/imageView_backgroundEarth"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:background="@drawable/backgroundearth"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/retour_rockilla"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/imageViewtrucblanc"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:alpha="0.2"
        app:layout_constraintBottom_toBottomOf="@+id/textView_Stamina"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_Power"
        app:srcCompat="@android:drawable/screen_background_light" />

    <TextView
        android:id="@+id/textView_Rockilla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/crushed"
        android:text="Level"
        android:textColor="#000000"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_TitleRockilla" />

    <TextView
        android:id="@+id/textView_powerRockilla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/crushed"
        android:text="Power"
        android:textColor="#000000"
        android:textSize="27dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView_lifeRockilla"
        app:layout_constraintTop_toBottomOf="@+id/imageView_buttonRockilla3" />

    <TextView
        android:id="@+id/textView_lifeRockilla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Life"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="27dp"
        android:fontFamily="@font/crushed"
        app:layout_constraintEnd_toEndOf="@+id/textView_staminaRockilla"
        app:layout_constraintTop_toBottomOf="@+id/textView_powerRockilla" />

    <TextView
        android:id="@+id/textView_speedRockilla"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Speed"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="27dp"
        android:fontFamily="@font/crushed"
        app:layout_constraintEnd_toEndOf="@+id/textView_lifeRockilla"
        app:layout_constraintTop_toBottomOf="@+id/textView_lifeRockilla" />

    <TextView
        android:id="@+id/textView_staminaRockilla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Stamina"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="27dp"
        android:fontFamily="@font/crushed"
        app:layout_constraintStart_toEndOf="@+id/textView_Stamina"
        app:layout_constraintTop_toBottomOf="@+id/textView_speedRockilla" />

    <SeekBar
        android:id="@+id/seekBar_levelRockilla"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:progressDrawable="@drawable/scrubber_control_rockilla"
        android:thumb="@drawable/icon_rockilla_0"
        android:background="@null"
        android:splitTrack="false"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_backgroundEarth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_valueRockilla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="1"
        android:textColor="#000000"
        android:textStyle="bold"
        android:visibility="invisible"
        android:fontFamily="@font/crushed"
        app:layout_constraintBottom_toTopOf="@+id/seekBar_levelRockilla"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView_monsterRockilla"
        android:layout_width="196dp"
        android:layout_height="300dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/seekBar_levelRockilla"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/eggrockilla" />

    <TextView
        android:id="@+id/textView_Power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/crushed"
        android:text="Power :"
        android:textColor="#000000"
        android:textSize="27dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView_power"
        app:layout_constraintTop_toBottomOf="@+id/imageView_buttonRockilla3" />

    <TextView
        android:id="@+id/textView_Life"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Life :"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="27dp"
        android:fontFamily="@font/crushed"
        app:layout_constraintStart_toStartOf="@+id/textView_Power"
        app:layout_constraintTop_toBottomOf="@+id/textView_Power" />

    <TextView
        android:id="@+id/textView_Speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Speed :"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="27dp"
        android:fontFamily="@font/crushed"
        app:layout_constraintStart_toStartOf="@+id/textView_Life"
        app:layout_constraintTop_toBottomOf="@+id/textView_Life" />

    <TextView
        android:id="@+id/textView_Stamina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Stamina :"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="27dp"
        android:fontFamily="@font/crushed"
        app:layout_constraintStart_toStartOf="@+id/textView_Speed"
        app:layout_constraintTop_toBottomOf="@+id/textView_Speed" />

    <ImageView
        android:id="@+id/imageView_power"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_Power"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_Power"
        app:srcCompat="@drawable/stat_power" />

    <ImageView
        android:id="@+id/imageView_life"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_Life"
        app:layout_constraintEnd_toStartOf="@+id/textView_Life"
        app:layout_constraintTop_toTopOf="@+id/textView_Life"
        app:srcCompat="@drawable/stat_life" />

    <ImageView
        android:id="@+id/imageView_Speed"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_Speed"
        app:layout_constraintEnd_toStartOf="@+id/textView_Speed"
        app:srcCompat="@drawable/stat_speed" />

    <ImageView
        android:id="@+id/imageView_Stamina"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_Stamina"
        app:layout_constraintEnd_toStartOf="@+id/textView_Stamina"
        app:srcCompat="@drawable/stat_stamina" />

    <ImageView
        android:id="@+id/imageView_buttonRockilla1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toStartOf="@+id/imageView_buttonRockilla2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView_buttonRockilla2"
        app:srcCompat="@drawable/mini_rockilla_1" />

    <ImageView
        android:id="@+id/imageView_buttonRockilla2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView_buttonRockilla3"
        app:srcCompat="@drawable/mini_rockilla_2" />

    <ImageView
        android:id="@+id/imageView_buttonRockilla3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_buttonRockilla2"
        app:layout_constraintTop_toBottomOf="@+id/retour_rockilla"
        app:srcCompat="@drawable/mini_rockilla_3" />

    <ImageView
        android:id="@+id/imageView_habitat"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_buttonRockilla1"
        app:srcCompat="@drawable/element_earth" />

    <ImageView
        android:id="@+id/imageView_weakness"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_habitat"
        app:srcCompat="@drawable/element_dark" />

    <TextView
        android:id="@+id/textView_TitleRockilla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/crushed"
        android:text="ROCKILLA"
        android:textColor="#000000"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_element"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/crushed"
        android:text="Element :"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_habitat"
        app:layout_constraintEnd_toStartOf="@+id/imageView_habitat"
        app:layout_constraintTop_toTopOf="@+id/imageView_habitat" />

    <TextView
        android:id="@+id/textView_weakness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/crushed"
        android:text="Weakness :"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_weakness"
        app:layout_constraintEnd_toStartOf="@+id/imageView_weakness"
        app:layout_constraintTop_toTopOf="@+id/imageView_weakness" />

</android.support.constraint.ConstraintLayout>
