<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.wcs.monsterlegendswiki.ThunderEagle">

    <ImageView
        android:id="@+id/imageView_backgroundThunder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:background="@drawable/backgroundthuner"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/retour_thunderEagle"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/imageViewtrucblanc"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:alpha="0.2"
        app:layout_constraintBottom_toBottomOf="@+id/textView_Stamina"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_Power"
        app:srcCompat="@android:drawable/screen_background_light" />

    <TextView
        android:id="@+id/textView_ThunderEagle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/crushed"
        android:text="Level"
        android:textColor="#d2d600"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_TitleThunderEagle" />

    <TextView
        android:id="@+id/textView_powerThunderEagle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/crushed"
        android:text="Power"
        android:textColor="#d2d600"
        android:textSize="27dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView_lifeThunderEagle"
        app:layout_constraintTop_toBottomOf="@+id/imageView_buttonThunderEagle3" />

    <TextView
        android:id="@+id/textView_lifeThunderEagle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Life"
        android:textColor="#d2d600"
        android:textStyle="bold"
        android:textSize="27dp"
        android:fontFamily="@font/crushed"
        app:layout_constraintEnd_toEndOf="@+id/textView_staminaThunderEagle"
        app:layout_constraintTop_toBottomOf="@+id/textView_powerThunderEagle" />

    <TextView
        android:id="@+id/textView_speedThunderEagle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Speed"
        android:textColor="#d2d600"
        android:textStyle="bold"
        android:textSize="27dp"
        android:fontFamily="@font/crushed"
        app:layout_constraintEnd_toEndOf="@+id/textView_lifeThunderEagle"
        app:layout_constraintTop_toBottomOf="@+id/textView_lifeThunderEagle" />

    <TextView
        android:id="@+id/textView_staminaThunderEagle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Stamina"
        android:textColor="#d2d600"
        android:textStyle="bold"
        android:textSize="27dp"
        android:fontFamily="@font/crushed"
        app:layout_constraintStart_toEndOf="@+id/textView_Stamina"
        app:layout_constraintTop_toBottomOf="@+id/textView_speedThunderEagle" />

    <SeekBar
        android:id="@+id/seekBar_levelThunderEagle"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:progressDrawable="@drawable/scrubber_control_thunder_eagle"
        android:thumb="@drawable/icon_thundereagle_0"
        android:background="@null"
        android:splitTrack="false"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_backgroundThunder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_valueThunderEagle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="1"
        android:textColor="#d2d600"
        android:textStyle="bold"
        android:visibility="invisible"
        android:fontFamily="@font/crushed"
        app:layout_constraintBottom_toTopOf="@+id/seekBar_levelThunderEagle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView_monsterThunderEagle"
        android:layout_width="196dp"
        android:layout_height="300dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/seekBar_levelThunderEagle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/eggthunderbird" />

    <TextView
        android:id="@+id/textView_Power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/crushed"
        android:text="Power :"
        android:textColor="#d2d600"
        android:textSize="27dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView_power"
        app:layout_constraintTop_toBottomOf="@+id/imageView_buttonThunderEagle3" />

    <TextView
        android:id="@+id/textView_Life"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Life :"
        android:textColor="#d2d600"
        android:textStyle="bold"
        android:textSize="27dp"
        android:fontFamily="@font/crushed"
        app:layout_constraintStart_toStartOf="@+id/textView_Power"
        app:layout_constraintTop_toBottomOf="@+id/textView_Power" />

    <TextView
        android:id="@+id/textView_Speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Speed :"
        android:textColor="#d2d600"
        android:textStyle="bold"
        android:textSize="27dp"
        android:fontFamily="@font/crushed"
        app:layout_constraintStart_toStartOf="@+id/textView_Life"
        app:layout_constraintTop_toBottomOf="@+id/textView_Life" />

    <TextView
        android:id="@+id/textView_Stamina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Stamina :"
        android:textColor="#d2d600"
        android:textStyle="bold"
        android:textSize="27dp"
        android:fontFamily="@font/crushed"
        app:layout_constraintStart_toStartOf="@+id/textView_Speed"
        app:layout_constraintTop_toBottomOf="@+id/textView_Speed" />

    <ImageView
        android:id="@+id/imageView_power"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_Power"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_Power"
        app:srcCompat="@drawable/stat_power" />

    <ImageView
        android:id="@+id/imageView_life"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_Life"
        app:layout_constraintEnd_toStartOf="@+id/textView_Life"
        app:layout_constraintTop_toTopOf="@+id/textView_Life"
        app:srcCompat="@drawable/stat_life" />

    <ImageView
        android:id="@+id/imageView_Speed"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_Speed"
        app:layout_constraintEnd_toStartOf="@+id/textView_Speed"
        app:srcCompat="@drawable/stat_speed" />

    <ImageView
        android:id="@+id/imageView_Stamina"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_Stamina"
        app:layout_constraintEnd_toStartOf="@+id/textView_Stamina"
        app:srcCompat="@drawable/stat_stamina" />

    <ImageView
        android:id="@+id/imageView_buttonThunderEagle1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toStartOf="@+id/imageView_buttonThunderEagle2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView_buttonThunderEagle2"
        app:srcCompat="@drawable/mini_thundereagle_1" />

    <ImageView
        android:id="@+id/imageView_buttonThunderEagle2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView_buttonThunderEagle3"
        app:srcCompat="@drawable/mini_thundereagle_2" />

    <ImageView
        android:id="@+id/imageView_buttonThunderEagle3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_buttonThunderEagle2"
        app:layout_constraintTop_toBottomOf="@+id/retour_thunderEagle"
        app:srcCompat="@drawable/mini_thundereagle_3" />

    <ImageView
        android:id="@+id/imageView_habitat"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_buttonThunderEagle1"
        app:srcCompat="@drawable/element_fire" />

    <ImageView
        android:id="@+id/imageView_weakness"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_habitat"
        app:srcCompat="@drawable/element_water" />

    <TextView
        android:id="@+id/textView_TitleThunderEagle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/crushed"
        android:text="THUNDER EAGLE"
        android:textColor="#d2d600"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_element"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/crushed"
        android:text="Element :"
        android:textColor="#d2d600"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_habitat"
        app:layout_constraintEnd_toStartOf="@+id/imageView_habitat"
        app:layout_constraintTop_toTopOf="@+id/imageView_habitat" />

    <TextView
        android:id="@+id/textView_weakness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/crushed"
        android:text="Weakness :"
        android:textColor="#d2d600"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_weakness"
        app:layout_constraintEnd_toStartOf="@+id/imageView_weakness"
        app:layout_constraintTop_toTopOf="@+id/imageView_weakness" />

</android.support.constraint.ConstraintLayout>
